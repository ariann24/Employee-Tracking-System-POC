@model IEnumerable<TimeTrackingFrontEnd.Models.EmployeeModel>

@{
    ViewData["Title"] = "Main";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
    <body>

        <form method="post">
            <div>
                <input type="submit" value="LogOut" name="button" class="btn btn-primary" />
                <label>&nbsp;&nbsp;&nbsp;</label>
            </div>

            <fieldset>
                <legend>Search Employee</legend>
                <div>
                    <label for="UserId">UserId:</label>
                    <input type="number" name="UserId" value="0" />
                    @Html.ValidationMessage("UserId")
                </div>
                <div>
                    <label>&nbsp;&nbsp;</label>
                    <input type="submit" value="Search" name="button" class="btn btn-primary" />
                </div>
            </fieldset>
        </form>

        <h2>Employee Table</h2>
        <label font="8">Double click particular row to update data</label>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">User Id</th>
                    <th scope="col">Employee Name</th>
                    <th scope="col">Clock In Time</th>
                    <th scope="col">Clock Out Time</th>
                    <th scope="col">Active</th>
                </tr>
            </thead>

            <tbody>
                @foreach (TimeTrackingFrontEnd.Models.EmployeeModel employee in Model)
                {

                    <tr href="" onclick="location.href = '@(Url.Action("Index", "Form", new TimeTrackingFrontEnd.Models.EmployeeModel() { UserId = employee.UserId, NameOfEmployee = employee.NameOfEmployee, ClockInTime = employee.ClockInTime, ClockOutTime = employee.ClockOutTime, Active = employee.Active }))'">
                        <td>@employee.UserId</td>
                        <td>@employee.NameOfEmployee</td>
                        <td>@employee.ClockInTime</td>
                        <td>@employee.ClockOutTime</td>
                        <td>@employee.Active</td>
                    </tr>

                }
            </tbody>
        </table>

    </body>
</html>

